#include <iostream>
#include <string>
#include <sstream>
using namespace std;

int countTerms (int , int);

int main (void){
  string str;
  istringstream sstr;
  
  int counter = 0;
  int initial , limit;

  getline(cin , str);
  sstr.str(str);
  sstr >> initial >> limit;

  while (cin.good() && initial > 0 && limit > 0){
    counter ++;
    
    int terms = countTerms (initial , limit);
    cout << "Case " << counter << ": A = " << initial 
	 << ", limit = " << limit << ", number of terms = " << terms << endl;

    getline(cin , str);

    sstr.clear();
    sstr.str(str);
    sstr >> initial >> limit;
  }

  return 0;
}

int countTerms(int initial , int limit){
  int count = 1;
  while (initial != 1){
    if (initial % 2 == 0)
      initial /= 2;
    else
      initial = initial * 3 + 1;
    
    if (initial > limit)
      break;

      count++;
  }
  
  return count;
}
